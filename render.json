{
  "name": "Hate Speech Detection API",
  "description": "Flask API with hate speech detection using ML",
  "repository": "https://github.com/saikrishna17-2004/Detecting-and-Mitigating-Hate-Speech-on-Social-Media-Platforms",
  "keywords": ["flask", "hate-speech", "detection", "machine-learning", "python"],
  "env": {
    "DATABASE_URL": {
      "description": "MongoDB Atlas connection string",
      "value": "mongodb+srv://user:password@cluster.mongodb.net/hate_speech_db?retryWrites=true&w=majority"
    },
    "SECRET_KEY": {
      "description": "Flask secret key for session management",
      "generator": "secret"
    },
    "JWT_SECRET_KEY": {
      "description": "JWT secret key for token authentication",
      "generator": "secret"
    },
    "FLASK_ENV": {
      "description": "Flask environment",
      "value": "production"
    }
  },
  "buildCommand": "pip install -r requirements.txt",
  "startCommand": "gunicorn -w 4 -b 0.0.0.0:$PORT run_backend:app",
  "regions": ["us"]
}
